<div class="card">
  <div class="card-content">
    <p class="title is-size-4 mb-1">
      <%= link_to node.title_w_default, node %>
    </p>
    <p class="border">
      <%= markdown(node.content.body.slice(0, 200)) if node.content.body %>
    </p>
    <nav class="breadcrumb">
      <ul>
        <li><%= link_to node.author.formatted_name, author_path(node.author.id) %></li>
        <li><%= link_to node.user.username, user_path(node.user) %></li>
        <li class="is-active">
          <a><%= node.created_at %> / <%= time_ago_in_words(node.created_at || DateTime.now) %> ago</a>
        </li>
        <li class="is-active">
          <a>Children: <%= node.n_children %></a>
        </li>
        <li class="is-active">
          <a>Descendants: <%= node.n_descendants %></a>
        </li>
      </ul>
    </nav>
  </div>
  <div class="card-footer">
    <!--
    <span><%= link_to 'Show', node, class: "card-footer-item" %></span>
    <span><%= link_to 'Edit', edit_node_path(node), class: "card-footer-item" %></span>
    <span><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-footer-item" %></span>
    -->
  </div>
</div>
